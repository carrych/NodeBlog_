<!-- ##### Login Area Start ##### -->
<section class="login-area mb-30">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-8">
                <!-- Login form -->
                <div class="row">
                    <div class="col-md-6 m-auto">
                        <div class="card card-body box-shadow">
                            <h1 class="text-center mb-3"><i class="fa fa-sign-in"></i>Login</h1>

                            <!-- msgs (errors or success) -->
                            {{> Msgs }}

                            <form action="/login" method="POST">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input
                                            type="email"
                                            id="email"
                                            name="email"
                                            class="form-control"
                                            placeholder="Enter Email"
                                    />
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input
                                            type="password"
                                            id="password"
                                            name="password"
                                            class="form-control"
                                            placeholder="Enter Password"
                                    />
                                </div>
                                <button type="submit" class="btn mag-btn mag-btn-100">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Login Area End ##### -->

